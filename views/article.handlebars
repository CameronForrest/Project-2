<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <div class="article">
        <ul id="article-list" class="list-group">

          {{#with articles}}
          <li data-id="{{this.id}}" class="list-group-item">
          <h4>{{this.title}}</h4>
          {{this.author}}<br>
          {{this.body}}<br>
            <a href="{{this.url}}" target="_blank"><button class="btn btn-danger float-right">Read More</button></a>
          </li>
          {{/with}}
        </ul>
        </div>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/article.js"></script>